<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Login_Loan">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Login_Loan"
        android:usesCleartextTraffic="true"> <!-- Added this line -->

        <!-- Login Activity -->
        <activity android:name="com.example.login_loan.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity android:name="com.example.login_loan.Signup"
            android:exported="true" />

        <!-- Dashboard Activity -->
        <activity android:name="com.example.login_loan.Dashboard"
            android:exported="true" />

        <!-- Add any additional activities here -->

    </application>

</manifest>
